#!/bin/sh
. "$(dirname -- "$0")/_/husky.sh"

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "${GREEN}ğŸ” Running pre-commit checks...${NC}"

# Run lint-staged (includes prettier, eslint, and type checking)
npx lint-staged || {
  echo "${YELLOW}âš ï¸  Issues found in staged files${NC}"
  echo "${YELLOW}ğŸ‘‰ Commit will proceed, but please fix these issues before pushing${NC}"
  echo "${YELLOW}   Run 'npm run lint:fix' and 'npm run type-check' to fix issues${NC}"
}

echo "ğŸ” Running type checks..."
npm run type-check:staged

# Always exit successfully (non-blocking)
exit 0
