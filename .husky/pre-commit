#!/usr/bin/env sh

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "${GREEN}🔍 Running pre-commit checks...${NC}"

# Run lint-staged (includes prettier and eslint)
npx lint-staged || {
  echo "${YELLOW}⚠️  Issues found in staged files${NC}"
  echo "${YELLOW}👉 Please fix these issues before committing${NC}"
  exit 1
}

# Exit with the lint-staged result
exit $?
