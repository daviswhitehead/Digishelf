{
  "name": "digishelf",
  "private": true,
  "workspaces": [
    "app",
    "firebase/functions"
  ],
  "scripts": {
    "prepare": "node -e \"if(process.env.HUSKY !== '0') require('husky').install()\"",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "build": "npm run build:functions && npm run build:app",
    "build:functions": "cd firebase/functions && npm run build",
    "build:app": "cd app && npm run build",
    "test": "npm run test:functions && npm run test:app",
    "test:functions": "cd firebase/functions && npm run test",
    "test:app": "cd app && npm run test",
    "dev": "concurrently \"cd app && npm run dev\" \"cd firebase/functions && npm run dev\" --names \"app,functions\" --prefix-colors \"blue,green\"",
    "type-check": "tsc --build",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@types/firebase": "^2.4.32",
    "@types/jest": "^29.5.14",
    "@types/next": "^8.0.7",
    "@types/node": "^22.15.2",
    "@types/react": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@octokit/rest": "^21.1.1",
    "cheerio": "^1.0.0",
    "firebase": "^11.6.1",
    "firebase-admin": "^13.3.0",
    "firebase-functions": "^6.3.2",
    "openai": "^4.96.0",
    "react-native-svg": "^15.11.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "build",
          "ci",
          "chore",
          "revert"
        ]
      ]
    }
  }
}
