{
  "name": "digishelf",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "postinstall": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "test": "npm run test:functions && npm run test:app",
    "test:functions": "cd firebase/functions && npm run test",
    "test:app": "cd app && npm run test",
    "build": "npm run build:functions && npm run build:app",
    "build:functions": "cd firebase/functions && npm run build",
    "build:app": "cd app && npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
