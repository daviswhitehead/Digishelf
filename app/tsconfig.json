{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@firebase/*": ["../firebase/*"],
      "firebase/*": ["../node_modules/firebase/*"]
    },
    "typeRoots": ["../node_modules/@types", "./types"]
  },
  "include": ["**/*.ts", "**/*.tsx", "types/**/*.d.ts"]
}
