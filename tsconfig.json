{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "paths": {
      "*": ["node_modules/*", "node_modules/@types/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "sources/**/*",
    "shared/**/*",
    "handlers/**/*",
    "data/**/*",
    "utils/**/*",
    "__tests__/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
} 