{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "incremental": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/lib",
    "**/dist",
    "**/.next",
    "**/coverage"
  ]
}
