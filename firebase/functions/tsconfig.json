{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": ".",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "target": "es2017",
    "composite": true,
    "declaration": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "lib", "**/*.test.ts", "**/*.spec.ts"]
}
