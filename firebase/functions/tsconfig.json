{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": ".",
    "baseUrl": ".",
    "lib": ["es2017", "dom"],
    "types": ["node", "jest"],
    "sourceMap": true,
    "sourceRoot": "",
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "paths": {
      "*": ["node_modules/*", "node_modules/@types/*"]
    },
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"]
  },
  "include": ["**/*.ts", "**/*.js", "**/*.tsx", "**/*.jsx"],
  "exclude": ["node_modules", "lib", "coverage", ".next", "jest.config.ts"]
}
