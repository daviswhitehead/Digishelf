{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "lib",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "noEmit": false,
    "types": ["node", "jest"],
    "paths": {
      "firebase-admin/*": ["./node_modules/firebase-admin/*"],
      "firebase-functions/*": ["./node_modules/firebase-functions/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "lib",
    ".runtimeconfig.json",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "jest.config.ts"
  ]
}
