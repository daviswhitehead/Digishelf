{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": ".",
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2022",
    "lib": ["es2022"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "test/**/*.ts",
    "test/**/*.js",
    "__tests__/**/*.ts",
    "__tests__/**/*.js",
    "sources/**/*.ts",
    "sources/**/*.js",
    "scripts/**/*.ts",
    "scripts/**/*.js",
    "*.ts",
    "*.js",
    "../shared/**/*.ts",
    "../shared/**/*.js"
  ],
  "exclude": ["node_modules", "lib", "coverage"]
}
